@model EventViewModel

@{ ViewData["Title"] = string.Format(PageTitlesResource.StringFormat, PageTitlesResource.EventEdit, PageTitlesResource.SiteName); }

<form class="create-form" method="post">
    <h1>Edit event</h1>
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="@Model.Name" required />
    </div>
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" placeholder="@Model.Title" required />
    </div>
    <div>
        <label asp-for="Info"></label>
        <textarea asp-for="Info" placeholder="@Model.Info" required></textarea>
    </div>
    <div>
        <label asp-for="Started" for="started">Started</label>
        <input asp-for="Started" type="date" name="started" id="started" min=@DateTime.UtcNow.Date.ToString("yyyy-MM-dd") required>
    </div>
    <div>
        <label asp-for="Format"></label>
        <select asp-for="Format" asp-items="Html.GetEnumSelectList<EventFormats>()" required>
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <div>
        <label asp-for="PNumber"></label>
        <input asp-for="PNumber" required />
    </div>
    <div class="create-form__submit-input">
        <input type="submit" value="Edit Event" asp-controller="Event" asp-action="EditEvent" asp-route-id="@Model.Id" />
    </div>
</form>

@section css {
    <link href="~/css/createEvent.css" rel="stylesheet" asp-append-version="true" />
}