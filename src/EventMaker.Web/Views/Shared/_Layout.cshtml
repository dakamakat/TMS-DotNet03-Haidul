<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

        <link href="~/css/app.css" rel="stylesheet" />
    @RenderSection("css", false)
</head>


<body>
    @if (User.Identity.IsAuthenticated)
    {
            <header class="navigation">
        <div class="logo">
            <img class="logo__image" src="~/images/logo.svg" alt="logo" />
        </div>
        <div class="navigation__log-in"> 
            <a class="navigation__log-in-button" asp-controller="Profile">@User.Identity.Name</a>
        </div>
        <form method="post" class="navigation__sign-out">
            <input class="navigation__sign-out-input" type="submit" value="Sign Out" asp-controller="Account" asp-action="SignOut"/>
        </form>
    </header>
    }
    else
    {
        <header class="navigation">
            <div class="logo">
                <img class="logo__image" src="~/images/logo.svg" alt="logo" />
            </div>
            <div class="navigation__log-in">
                <a class="navigation__log-in-button" asp-controller="Account" asp-action="LogIn">Log In</a>
            </div>
            <div class="navigation__sign-up">
                <a class="navigation__sign-up-button" asp-controller="Account" asp-action="SignUp">Sign Up</a>
            </div>
        </header>
    }
    @RenderBody()
</body>
</html>
